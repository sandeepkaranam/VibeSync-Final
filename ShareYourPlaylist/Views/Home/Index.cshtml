@model ShareYourPlaylist.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VibeSync</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Body Background */
        body {
            background-color: #000; /* Ensures black background if the image fails to load */
            color: #fff;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* Full-screen background image */
        .background-image {
            background: url('@Url.Content("/images/first-image.jpg")') no-repeat center center fixed;
            background-size: cover;
            background-color: #000; /* Black background fallback */
            height: 100vh;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        /* Text overlay styling */
        .content-overlay {
            text-align: center;
            color: white;
        }

            .content-overlay h1 {
                font-size: 4rem;
                font-weight: bold;
                margin-bottom: 0.5rem;
            }

            .content-overlay p {
                font-size: 1.5rem;
                max-width: 80%;
                margin: auto;
            }

        /* Chart container styling */
        .chart-section {
            padding: 2rem;
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Full-screen welcome message -->
    <div class="background-image">
        <div class="content-overlay">
            <h1>@Model.WelcomeMessage</h1>
            <p>@Model.Description</p>
        </div>
    </div>

    <!-- Bootstrap and jQuery scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
