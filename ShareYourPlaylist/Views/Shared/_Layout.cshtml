<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VibeSync</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Custom Navbar Styling */
        .navbar-custom {
            background-color: #1DB954; /* Spotify Green */
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #fff;
                font-weight: bold;
                transition: color 0.3s, transform 0.3s; /* Smooth transition */
            }

                .navbar-custom .nav-link:hover {
                    color: #f0f0f0; /* Slightly lighter on hover */
                    transform: scale(1.1); /* Slight zoom on hover */
                }

        /* Logo styling */
        .navbar-brand img {
            height: 40px; /* Adjust height as needed */
            margin-right: 8px; /* Space between logo and text */
        }

        /* Full Height and Flexbox for body and footer */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #000; /* Black background */
            color: #fff;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        /* Main Content Area */
        .container {
            flex: 1;
        }

        /* Footer Styling */
        .footer {
            background-color: #1DB954;
            color: #fff;
            padding: 10px 0;
            text-align: center;
            width: 100%;
        }

            .footer a {
                color: #fff;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/VibeSync LOGO.jpg" alt="VibeSync Logo" style="height: 40px; margin-right: 8px;">
                VibeSync
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Playlists">Playlists</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="CreatePlaylist">Create Playlist</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Trends">Trends</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody() <!-- This line is essential for content rendering -->
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            &copy; 2024 - VibeSync - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
