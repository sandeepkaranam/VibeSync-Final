<!-- Styles for Team Page -->
<style>
    /* Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Main Container Styling */
    .team-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 40px;
    }

    /* Team Member Card */
    .team-card {
        background-color: #1a1a1a;
        border-radius: 15px;
        width: 45%;
        padding: 30px;
        text-align: center;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .team-card:hover {
            transform: scale(1.05);
        }

        /* Profile Picture */
        .team-card img.profile-picture {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            margin: 0 auto 20px; /* Center the image horizontally and add bottom margin */
            border: 3px solid #28a745;
            object-fit: cover;
        }

        /* Name and Role */
        .team-card h3 {
            font-size: 20px;
            color: #fff;
            margin-bottom: 5px;
        }

        .team-card p.role {
            font-size: 16px;
            color: #28a745;
            margin-bottom: 15px;
        }

        /* Bio */
        .team-card p.bio {
            font-size: 15px;
            color: #ddd;
            margin-bottom: 20px;
            line-height: 1.6;
        }

    /* Social Links */
    .social-links {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: auto;
        padding-top: 15px;
    }

        .social-links a {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #fff;
            font-size: 14px;
        }

        .social-links img {
            width: 20px;
            height: 20px;
            margin-right: 5px;
        }
</style>
